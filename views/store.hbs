	<div>
		<label for="store_state">State:</label>
		<input type="store_state" id="store_state" name="store_state" value="">
	</div>
	<div>
		<label for="store_zipcode">Zipcode:</label>
		<input type="store_zipcode" id="store_zipcode" name="store_zipcode" value="">
